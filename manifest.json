{
  "manifest_version": 3,
  "name": "LinkedIn Job Reality Checker",
  "version": "0.1.0",
  "description": "Analyzes LinkedIn job postings using frontend signals and heuristics.",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
